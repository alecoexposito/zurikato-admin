{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="login-message text-danger text-center"><i class="fa fa-exclamation-circle"></i> {{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <fieldset>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="E-mail" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Password" id="password" name="_password" required="required" autocomplete="current-password" />
        </div>
        <div class="form-group">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me" class="text-muted remember-me-label">{{ 'security.login.remember_me'|trans }}</label>
        </div>
        <div class="form-group">
            <button class="btn btn-default btn-lg btn-block" type="submit" id="_submit" name="_submit"><i class="fa fa-unlock-alt"></i> Login</button>
        </div>
    </fieldset>


    {#<label for="username">{{ 'security.login.username'|trans }}</label>#}

    {#<label for="password">{{ 'security.login.password'|trans }}</label>#}


</form>
