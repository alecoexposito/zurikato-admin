{% extends 'easyadmin/default/list.html.twig' %}
{% block content_header %}
    {{ parent() }}
    <div class="row">
        <div class="col-sm-12">
            <h4>Filtrar por fecha</h4>
        </div>
        <form id="dates-form" method="get" action="{{ path('easyadmin') }}">
            <input type="hidden" name="action" value="list">
            <input type="hidden" name="entity" value="SemovLog">

            <div class="col-sm-12">
                <div class="form-group custom-datetime col-sm-4">
                    <label>Fecha Inicio</label>
                    <input name="startdate" type="text" class="form-control" />
                </div>
                <div class="form-group custom-datetime col-sm-4">
                    <label>Fecha Fin</label>
                    <input name="enddate" type="text" class="form-control" />
                </div>
                <div class="form-group col-sm-2">
                    <button type="submit" id="filter-button" class="btn btn-primary"><i class="fa fa-filter"></i> Filtrar</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}

