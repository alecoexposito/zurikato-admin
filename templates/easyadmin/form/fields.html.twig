        <table class="table table-bordered table-stripped">
            <thead>
                <th class="text-center">Tipo</th>
                <th class="text-center">Marca</th>
                <th class="text-center">No. Serie</th>
                <th class="text-center">CÃ³digo Interno</th>
                <th class="text-center">Acciones</th>
            </thead>
            <tbody>
                {% for tire in vehicle.tires %}
                    <tr>
                        <td class="text-center">{{ tire.type }}</td>
                        <td class="text-center">{{ tire.brand }}</td>
                        <td class="text-center">{{ tire.serial }}</td>
                        <td class="text-center">{{ tire.internalCode }}</td>
                        <td class="text-center"><a class="btn btn-primary" href="/admin/?action=edit&id={{ tire.id }}&entity=AgregarProfundidad"><i class="fa fa-plus"></i> Agregar Profundidad</a></td>
                    </tr>

                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}

